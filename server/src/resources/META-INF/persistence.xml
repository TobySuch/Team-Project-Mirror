<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

  <persistence-unit name="server.database">
    <description>
      Persistence unit for ARMS Hibernate JPA
    </description>

    <class>database.Staff</class>
    <class>database.Transaction</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="POSTGRE DRIVER"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:"/>
      <property name="javax.persistence.jdbc.user" value=""/>
      <property name="javax.persistence.jdbc.password" value=""/>

      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
    </properties>

  </persistence-unit>
</persistence>